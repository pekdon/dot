# pekwm_panel configuration

Define = "FullResourceColors" {
  Colors {
    Percent = "0" {
      Color = "#cc0000"
    }
    Percent = "10" {
      Color = "#ff7f50"
    }
    Percent = "50" {
      Color = "#f0e68c"
    }
    Percent = "75" {
      Color = "#00cc00"
    }
  }
}

Define = "ResourceColors" {
  Colors {
    Percent = "0" {
      Color = "#00cc00"
    }
    Percent = "50" {
      Color = "#f0e68c"
    }
    Percent = "75" {
      Color = "#ff7f50"
    }
    Percent = "90" {
      Color = "#cc0000"
    }
  }
}

Panel {
  Placement = "Top"
}

Commands {
  Command = "$_PEKWM_SCRIPT_PATH/pekwm_panel_sysinfo" {
    Interval = "15"
  }
  Command = "$_PEKWM_SCRIPT_PATH/pekwm_panel_battery.sh" {
    Interval = "60"
  }
  Command = "curl -s 'https://wttr.in/SkellefteÃ¥?format=%c+%t\\n'" {
    Interval = "3600"
    Assign = "weather"
  }
}

Widgets {
  Text = "%:WORKSPACE_NUMBER:" {
    Size = "TextWidth _00_"
    Click = "5" { PekwmAction = "GotoWorkspace Prev" }
    Click = "4" { PekwmAction = "GotoWorkspace Next" }
  }
  Text = "%sysinfo_load1" {
    Size = "TextWidth _0.00_"
  }
  Bar = "sysinfo_mem_percent" {
    Size = "Pixels 24"
    Text = "M"
    @ResourceColors
  }
  Bar = "sysinfo_swap_percent" {
    Size = "Pixels 24"
    Text = "S"
    @ResourceColors
  }
  Bar = "battery" {
    Size = "Pixels 24"
    Text = "B"
    @FullResourceColors
  }
  Icon = "battery_state" {
    Icon = "battery.png"
    Scale = "false"
  }
  Text = "%weather" {
    Size = "TextWidth ____+0_C_"
  }
  Text = "%ATOM_CUT_BUFFER0" {
    Size = "TextWidth _ABCDEFGHIJKLMNOP_"
  }
  ClientList = "separator" {
    Size = "*"
  }
  Icon = "ATOM__XKB_RULES_NAMES" {
    Icon = "kbd.png"
    # convert key list into the layout only skipping device and
    # keyboard type. evdev,pc105,us,, -> us
    Transform = "/^[^,]*,[^,]*,([^,]*),.*/\\1/"
    Scale = "false"
    Exec = "$_PEKWM_SCRIPT_PATH/pekwm_toggle_kbd_layout.sh"
  }
  DateTime = "%Y-%m-%d %H:%M" {
    Size = "TextWidth _0000-00-00 00:00_"
    Interval = "60"
  }
  Systray {
    Size = "Required"
  }
}
